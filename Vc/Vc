#ifndef VC_VC_
#define VC_VC_
#include "simd"
#include "ostream"
#include "Allocator"
#include "array"
#include "vector"

Vc_VERSIONED_NAMESPACE_BEGIN
using double_v = native_simd<double>;
using float_v = native_simd<float>;
using uint_v = native_simd<unsigned int>;
using int_v = native_simd<int>;
using ushort_v = native_simd<unsigned short>;
using short_v = native_simd<short>;

namespace VectorAbi
{
[[deprecated]] using Scalar = Vc::simd_abi::scalar;
[[deprecated]] using Sse = Vc::simd_abi::sse;
[[deprecated]] using Avx = Vc::simd_abi::avx;
}

template <class T, class Abi> using [[deprecated]] Vector = simd<T, Abi>;
template <class T, class Abi> using [[deprecated]] Mask = simd_mask<T, Abi>;
namespace SSE
{
template <class T> using Vector = simd<T, simd_abi::sse>;
template <class T> using Mask = simd_mask<T, simd_abi::sse>;
using double_v = Vector<double>;
using float_v = Vector<float>;
using uint_v = Vector<unsigned int>;
using int_v = Vector<int>;
using ushort_v = Vector<unsigned short>;
using short_v = Vector<short>;
}  // namespace SSE
namespace AVX
{
template <class T>
using Vector = simd<T, std::conditional_t<std::is_floating_point<T>::value, simd_abi::avx,
                                          simd_abi::sse>>;
template <class T>
using Mask = simd_mask<T, std::conditional_t<std::is_floating_point<T>::value,
                                             simd_abi::avx, simd_abi::sse>>;
using double_v = Vector<double>;
using float_v = Vector<float>;
using uint_v = Vector<unsigned int>;
using int_v = Vector<int>;
using ushort_v = Vector<unsigned short>;
using short_v = Vector<short>;
}  // namespace SSE
namespace AVX2
{
template <class T> using Vector = simd<T, simd_abi::avx>;
template <class T> using Mask = simd_mask<T, simd_abi::avx>;
using double_v = Vector<double>;
using float_v = Vector<float>;
using uint_v = Vector<unsigned int>;
using int_v = Vector<int>;
using ushort_v = Vector<unsigned short>;
using short_v = Vector<short>;
}  // namespace SSE
Vc_VERSIONED_NAMESPACE_END
#endif // VC_VC_

// vim: ft=cpp foldmethod=marker
